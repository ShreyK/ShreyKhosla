---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

// Get all blog posts, sorted by date (newest first)
const posts = await getCollection('blog');
const sortedPosts = posts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<BaseLayout 
  title="Blog | Shrey Khosla" 
  description="Technical insights, dev logs, and thoughts on software engineering"
>
  <div class="blog-page">
    <div class="blog-inner">
      <!-- Header -->
      <div class="blog-header">
        <h1 class="blog-title glow-text">Blog</h1>
        <p class="blog-desc">
          Technical insights, dev logs, and thoughts on software engineering
        </p>
      </div>

      <!-- Blog Posts Grid -->
      <div class="posts-list">
        {sortedPosts.map((post: CollectionEntry<'blog'>) => (
          <article class="post-card glassmorphism glow-border">
            <a href={`/blog/${post.id.replace('.mdx', '')}`} class="post-link">
              <!-- Date and Tags -->
              <div class="post-meta">
                <time datetime={post.data.pubDate.toISOString()} class="post-date">
                  {new Date(post.data.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                {post.data.tags && (
                  <div class="post-tags">
                    {post.data.tags.slice(0, 3).map((tag: string) => (
                      <span class="post-tag">#{tag}</span>
                    ))}
                  </div>
                )}
              </div>

              <!-- Title and Description -->
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-desc">{post.data.description}</p>

              <!-- Read More -->
              <span class="read-more">
                Read More
                <svg class="icon-sm" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          </article>
        ))}
      </div>

      <!-- Back to Home -->
      <div class="blog-back">
        <a href="/#experience" class="back-link">
          <svg class="icon-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .blog-page {
    min-height: 100svh;
    padding-top: 8rem;
    padding-bottom: 5rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  @media (min-width: 640px)  { .blog-page { padding-left: 1.5rem; padding-right: 1.5rem; } }
  @media (min-width: 1024px) { .blog-page { padding-left: 2rem;   padding-right: 2rem;   } }

  .blog-inner {
    max-width: 56rem;
    margin: 0 auto;
  }

  .blog-header {
    margin-bottom: 4rem;
    text-align: center;
  }

  .blog-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) { .blog-title { font-size: 3.75rem; } }

  .blog-desc {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 42rem;
    margin: 0 auto;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .post-card {
    border-radius: 0.5rem;
    padding: 2rem;
    transition: transform 300ms;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .post-card:hover { transform: scale(1.02); }

  .post-link { display: block; }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
  }

  .post-date { color: var(--color-text-muted); }

  .post-tags {
    display: flex;
    gap: 0.5rem;
  }

  .post-tag {
    padding: 0.25rem 0.5rem;
    background: oklch(from var(--color-accent-blue) l c h / 0.1);
    color: var(--color-accent-cyan);
    font-size: 0.75rem;
    border-radius: 0.25rem;
    border: 1px solid oklch(from var(--color-accent-blue) l c h / 0.3);
  }

  .post-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--color-text-primary);
    transition: color 150ms ease;
  }

  .post-card:hover .post-title { color: var(--color-accent-cyan); }

  @media (min-width: 768px) { .post-title { font-size: 1.875rem; } }

  .post-desc {
    color: var(--color-text-secondary);
    line-height: 1.625;
    margin-bottom: 1rem;
  }

  .read-more {
    color: var(--color-accent-blue);
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 150ms ease;
  }

  .read-more:hover { color: var(--color-accent-cyan); }

  .icon-sm { width: 1rem; height: 1rem; }
  .icon-md { width: 1.25rem; height: 1.25rem; }

  .blog-back {
    margin-top: 3rem;
    text-align: center;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
    transition: color 150ms ease;
  }

  .back-link:hover { color: var(--color-accent-cyan); }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to   { opacity: 1; transform: translateY(0);    }
  }
</style>
