---
import { getCollection, type CollectionEntry, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Generate static paths for all blog posts
export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post: CollectionEntry<'blog'>) => ({
    params: { slug: post.id.replace('.mdx', '') },
    props: { entry: post },
  }));
}

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<BaseLayout 
  title={`${entry.data.title} | Shrey Khosla`}
  description={entry.data.description}
>
  <article class="post-page">
    <div class="post-inner">
      <!-- Back to Blog -->
      <div class="post-back">
        <a href="/blog" class="back-link">
          <svg class="icon-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Blog
        </a>
      </div>

      <!-- Article Header -->
      <header class="post-header">
        <h1 class="post-title glow-text">
          {entry.data.title}
        </h1>

        <!-- Meta Info -->
        <div class="post-meta">
          <div class="meta-item">
            <svg class="icon-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={entry.data.pubDate.toISOString()}>
              {new Date(entry.data.pubDate).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>

          {entry.data.author && (
            <div class="meta-item">
              <svg class="icon-md" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>{entry.data.author}</span>
            </div>
          )}
        </div>

        <!-- Tags -->
        {entry.data.tags && entry.data.tags.length > 0 && (
          <div class="post-tags">
            {entry.data.tags.map((tag: string) => (
              <span class="post-tag">#{tag}</span>
            ))}
          </div>
        )}
      </header>

      <!-- Article Content -->
      <div class="blog-content post-content">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="post-footer">
        <div class="post-footer-inner">
          <p class="footer-msg">
            Thanks for reading! Have questions or feedback?
          </p>
          <a href="/#contact" class="cta-contact">
            Get in Touch
          </a>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .post-page {
    min-height: 100svh;
    padding-top: 8rem;
    padding-bottom: 5rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  @media (min-width: 640px)  { .post-page { padding-left: 1.5rem; padding-right: 1.5rem; } }
  @media (min-width: 1024px) { .post-page { padding-left: 2rem;   padding-right: 2rem;   } }

  .post-inner {
    max-width: 56rem;
    margin: 0 auto;
  }

  .post-back {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
    transition: color 150ms ease;
  }

  .back-link:hover { color: var(--color-accent-cyan); }

  .icon-md { width: 1.25rem; height: 1.25rem; }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-title {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) { .post-title { font-size: 3rem; } }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-tag {
    padding: 0.25rem 0.75rem;
    background: oklch(from var(--color-accent-blue) l c h / 0.1);
    color: var(--color-accent-cyan);
    font-size: 0.875rem;
    border-radius: 0.25rem;
    border: 1px solid oklch(from var(--color-accent-blue) l c h / 0.3);
  }

  .post-content {
    font-size: 1rem;
  }

  @media (min-width: 768px) { .post-content { font-size: 1.125rem; } }

  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid oklch(from var(--color-accent-blue) l c h / 0.3);
  }

  .post-footer-inner {
    text-align: center;
  }

  .footer-msg {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  .cta-contact {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--color-accent-blue);
    border-radius: 0.5rem;
    font-weight: 600;
    color: oklch(1.0 0 0);
    min-width: 200px;
    text-align: center;
    box-shadow: 0 4px 6px oklch(from var(--color-accent-blue) l c h / 0.5);
    transition: background 150ms ease;
  }

  .cta-contact:hover {
    background: var(--color-accent-cyan);
    color: oklch(1.0 0 0);
  }
</style>
