---
import BaseLayout from '../layouts/BaseLayout.astro';
import StarfieldHero from '../components/StarfieldHero.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';
// import AboutSection from '../components/AboutSection.astro';
import ProductsGrid from '../components/ProductsGrid.astro';
import GameShowcase from '../components/GameShowcase.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <main>
    <StarfieldHero />

    <ExperienceTimeline />

    <!-- <AboutSection /> -->

    <ProductsGrid />

    <GameShowcase />

    <section id="contact" class="contact-section">
      <div class="contact-inner">
        <h2 class="contact-title">Get in Touch</h2>
        <p class="contact-sub">
          Let's build something amazing together
        </p>
        <a href="mailto:theshreykhosla@gmail.com" class="contact-email">
          theshreykhosla@gmail.com
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .contact-section {
    min-height: 100svh;
    padding: 6rem 1rem;
    background: transparent;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Subtle ambient glow for the contact section */
  .contact-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse 70% 60% at 50% 50%,
      oklch(0.13 0.04 260 / 0.4),
      transparent
    );
    pointer-events: none;
    z-index: 0;
  }

  .contact-inner { position: relative; z-index: 1; }

  @media (min-width: 640px)  { .contact-section { padding: 6rem 1.5rem; } }
  @media (min-width: 1024px) { .contact-section { padding: 6rem 2rem;   } }

  .contact-inner {
    max-width: 56rem;
    margin: 0 auto;
    text-align: center;
  }

  .contact-title {
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--color-text-primary);
  }

  @media (min-width: 768px) { .contact-title { font-size: 3rem; } }

  .contact-sub {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 3rem;
    line-height: 1.625;
  }

  @media (min-width: 768px) { .contact-sub { font-size: 1.5rem; } }

  .contact-email {
    display: inline-block;
    font-size: 1.5rem;
    color: var(--color-accent-blue);
    font-weight: 600;
    transition: all 300ms;
  }

  .contact-email:hover {
    color: var(--color-accent-cyan);
    transform: scale(1.05);
  }

  @media (min-width: 768px) { .contact-email { font-size: 1.875rem; } }
</style>
