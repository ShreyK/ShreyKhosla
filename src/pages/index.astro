---
import BaseLayout from '../layouts/BaseLayout.astro';
import StarfieldHero from '../components/StarfieldHero.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';
// import AboutSection from '../components/AboutSection.astro';
import ProductsGrid from '../components/ProductsGrid.astro';
import GameShowcase from '../components/GameShowcase.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <main>
    <StarfieldHero />

    <ExperienceTimeline />

    <!-- <AboutSection /> -->

    <ProductsGrid />

    <GameShowcase />

    <section id="contact" class="min-h-screen py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-space-black to-space-navy flex items-center justify-center">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-8 text-text-primary">Get in Touch</h2>
        <p class="text-xl md:text-2xl text-text-secondary mb-12 leading-relaxed">
          Let's build something amazing together
        </p>
        <a href="mailto:theshreykhosla@gmail.com" class="inline-block text-2xl md:text-3xl text-accent-blue hover:text-accent-cyan transition-all duration-300 hover:scale-105 font-semibold">
          theshreykhosla@gmail.com
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
