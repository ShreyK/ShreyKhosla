---
import BaseLayout from '../layouts/BaseLayout.astro';
import StarfieldHero from '../components/StarfieldHero.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';
import AboutSection from '../components/AboutSection.astro';
import ProductsGrid from '../components/ProductsGrid.astro';
import GameShowcase from '../components/GameShowcase.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <main>
    <StarfieldHero />

    <ExperienceTimeline />

    <AboutSection />

    <ProductsGrid />

    <GameShowcase />

    <section id="contact" class="min-h-screen py-20 px-4 bg-gradient-to-b from-space-black to-space-navy">
      <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-12">Get in Touch</h2>
        <p class="text-xl text-text-secondary mb-8">
          Let's build something amazing together
        </p>
        <a href="mailto:theshreykhosla@gmail.com" class="text-2xl text-accent-blue hover:text-accent-cyan transition-colors">
          theshreykhosla@gmail.com
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
