---
import BaseLayout from '../layouts/BaseLayout.astro';
import StarfieldHero from '../components/StarfieldHero.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <main>
    <StarfieldHero />

    <section id="experience" class="min-h-screen py-20 px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">Experience</h2>
        <p class="text-center text-text-secondary">Coming soon...</p>
      </div>
    </section>

    <section id="products" class="min-h-screen py-20 px-4 bg-space-navy">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">Products</h2>
        <p class="text-center text-text-secondary">Coming soon...</p>
      </div>
    </section>

    <section id="games" class="min-h-screen py-20 px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">Games</h2>
        <p class="text-center text-text-secondary">Coming soon...</p>
      </div>
    </section>

    <section id="contact" class="min-h-screen py-20 px-4 bg-space-navy">
      <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-12">Get in Touch</h2>
        <p class="text-xl text-text-secondary mb-8">
          Let's build something amazing together
        </p>
        <a href="mailto:theshreykhosla@gmail.com" class="text-2xl text-accent-blue hover:text-accent-cyan transition-colors">
          theshreykhosla@gmail.com
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
