---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <main>
    <section id="hero" class="hero min-h-screen flex items-center justify-center pt-16">
      <div class="text-center px-4">
        <h1 class="text-6xl font-bold mb-4 glow-text">
          Shrey Khosla
        </h1>
        <p class="text-2xl text-text-secondary mb-8">
          Senior Software Engineer
        </p>
        <p class="text-lg text-text-muted max-w-2xl mx-auto mb-12">
          7+ years building products from 0→1 to N→N+1 across startups and enterprise
        </p>
        <div class="flex gap-4 justify-center">
          <a href="#experience" class="px-6 py-3 glassmorphism glow-border rounded-lg hover:scale-105 transition-transform">
            View Work
          </a>
          <a href="#contact" class="px-6 py-3 bg-accent-blue text-space-black rounded-lg hover:bg-accent-cyan transition-colors">
            Get in Touch
          </a>
        </div>
      </div>
    </section>

    <section id="experience" class="min-h-screen py-20 px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">Experience</h2>
        <p class="text-center text-text-secondary">Coming soon...</p>
      </div>
    </section>

    <section id="products" class="min-h-screen py-20 px-4 bg-space-navy">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">Products</h2>
        <p class="text-center text-text-secondary">Coming soon...</p>
      </div>
    </section>

    <section id="games" class="min-h-screen py-20 px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-4xl font-bold mb-12 text-center">Games</h2>
        <p class="text-center text-text-secondary">Coming soon...</p>
      </div>
    </section>

    <section id="contact" class="min-h-screen py-20 px-4 bg-space-navy">
      <div class="max-w-6xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-12">Get in Touch</h2>
        <p class="text-xl text-text-secondary mb-8">
          Let's build something amazing together
        </p>
        <a href="mailto:theshreykhosla@gmail.com" class="text-2xl text-accent-blue hover:text-accent-cyan transition-colors">
          theshreykhosla@gmail.com
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .hero {
    background: radial-gradient(ellipse at center, oklch(0.20 0.05 240) 0%, oklch(0.10 0.01 240) 100%);
  }
</style>
