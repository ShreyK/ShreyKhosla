<style>
  .game-section {
    position: relative;
    min-height: 100svh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 6rem 1rem;
  }

  @media (min-width: 640px)  { .game-section { padding: 6rem 1.5rem; } }
  @media (min-width: 1024px) { .game-section { padding: 6rem 2rem;   } }

  .game-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .game-bg-overlay-1 {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      oklch(from var(--color-space-black) l c h / 0.8),
      oklch(from var(--color-space-black) l c h / 0.7),
      var(--color-space-black)
    );
  }

  .game-bg-overlay-2 {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom right,
      var(--color-space-navy),
      var(--color-space-dark),
      var(--color-space-black)
    );
    opacity: 0.6;
  }

  .game-inner {
    max-width: 72rem;
    margin: 0 auto;
    position: relative;
    z-index: 10;
    text-align: center;
  }

  .title-block {
    margin-bottom: 2rem;
  }

  .game-title-glow {
    font-size: 4rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(
      135deg,
      oklch(0.85 0.15 240) 0%,
      oklch(0.75 0.20 270) 25%,
      oklch(0.65 0.25 240) 50%,
      oklch(0.75 0.20 270) 75%,
      oklch(0.85 0.15 240) 100%
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 8s ease-in-out infinite;
  }

  @media (min-width: 768px) { .game-title-glow { font-size: 6rem; } }

  .game-subtitle {
    font-size: 1.5rem;
    color: var(--color-accent-cyan);
    font-weight: 600;
  }

  @media (min-width: 768px) { .game-subtitle { font-size: 1.875rem; } }

  .game-description {
    max-width: 56rem;
    margin: 0 auto 4rem;
    padding: 2rem;
    border-radius: 0.5rem;
  }

  @media (min-width: 768px) { .game-description { padding: 2.5rem; } }

  .game-desc-text {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.625;
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: var(--color-accent-blue);
    font-weight: 600;
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    text-align: left;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) { .features-grid { grid-template-columns: repeat(2, 1fr); } }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .feature-icon {
    color: var(--color-accent-cyan);
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .feature-title {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .feature-desc {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .tech-details {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .game-ctas {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    margin-bottom: 4rem;
  }

  @media (min-width: 640px) { .game-ctas { flex-direction: row; } }

  .cta-steam,
  .cta-site {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.25rem 3rem;
    border-radius: 0.5rem;
    font-weight: 700;
    font-size: 1.125rem;
    min-width: 250px;
    transition: all 300ms;
  }

  .cta-steam {
    background: var(--color-accent-blue);
    color: var(--color-space-black);
    box-shadow: 0 20px 25px oklch(from var(--color-accent-blue) l c h / 0.5);
  }

  .cta-steam:hover {
    background: var(--color-accent-cyan);
    transform: scale(1.05);
    color: var(--color-space-black);
  }

  .cta-site {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .cta-site:hover {
    transform: scale(1.05);
    color: var(--color-text-primary);
  }

  .cta-icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  .social-row {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
  }

  .social-label { color: var(--color-text-muted); }

  .social-link {
    color: var(--color-text-secondary);
    transition: color 150ms ease;
  }

  .social-link:hover { color: var(--color-accent-blue); }

  .social-icon {
    width: 2rem;
    height: 2rem;
  }

  @keyframes shimmer {
    0%, 100% { background-position: 0% 50%; }
    50%       { background-position: 100% 50%; }
  }

  @media (prefers-reduced-motion: reduce) {
    .game-title-glow {
      animation: none;
      background-position: 0% 50%;
    }
  }
</style>
