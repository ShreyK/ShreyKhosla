---

<footer class="site-footer">
  <div class="footer-inner">
    <div class="footer-grid">
      <!-- Brand -->
      <div class="footer-col">
        <h3 class="footer-brand">Shrey Khosla</h3>
        <p class="footer-tagline">
          Senior Software Engineer building products from 0→1 to N→N+1
        </p>
      </div>

      <!-- Quick Links -->
      <div class="footer-col">
        <h4 class="footer-heading">Quick Links</h4>
        <ul class="footer-links">
          <li><a href="/#experience">Experience</a></li>
          <li><a href="/#products">Products</a></li>
          <li><a href="/#games">Games</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </div>

      <!-- Connect -->
      <div class="footer-col">
        <h4 class="footer-heading">Connect</h4>
        <div class="social-links">
          {socialLinks.map((link) => (
            <a
              href={link.url}
              target={link.url.startsWith('mailto:') ? undefined : '_blank'}
              rel={link.url.startsWith('mailto:') ? undefined : 'noopener noreferrer'}
              class="social-icon"
              aria-label={link.name}
              set:html={link.svg}
            />
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
      <p class="footer-copy">© {currentYear} Shrey Khosla. All rights reserved.</p>
      <p class="footer-copy">
        Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    width: 100%;
    background: var(--color-space-dark);
    border-top: 1px solid oklch(from var(--color-accent-blue) l c h / 0.1);
    padding: 3rem 0;
    /* margin-top: 6rem; */
    display: flex;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .site-footer {
      padding: 4rem 0;
    }
  }

  .footer-inner {
    width: 100%;
    max-width: 80rem;
    padding: 0 1rem;
    text-align: center;
  }

  @media (min-width: 640px) {
    .footer-inner {
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .footer-inner {
      padding: 0 2rem;
    }
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }

  .footer-col {
    text-align: center;
  }

  .footer-brand {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
  }

  .footer-tagline {
    color: var(--color-text-secondary);
    line-height: 1.625;
  }

  .footer-heading {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links a {
    color: var(--color-text-secondary);
    transition: color 150ms ease;
  }

  .footer-links a:hover {
    color: var(--color-accent-blue);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .social-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-text-secondary);
    transition: color 150ms ease;
    display: inline-block;
  }

  .social-icon:hover {
    color: var(--color-accent-blue);
  }

  .footer-bottom {
    border-top: 1px solid oklch(from var(--color-accent-blue) l c h / 0.1);
    padding-top: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
    }
  }

  .footer-copy {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    text-align: center;
  }

  .footer-copy a {
    color: var(--color-accent-blue);
    transition: color 150ms ease;
  }

  .footer-copy a:hover {
    color: var(--color-accent-cyan);
  }
</style>
