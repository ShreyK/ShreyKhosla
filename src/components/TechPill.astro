---
interface Props {
  label: string;
  variant?: 'primary' | 'secondary' | 'accent';
}

const { label, variant = 'primary' } = Astro.props;
---

<span class="pill" data-variant={variant}>
  {label}
</span>

<style>
  .pill {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid transparent;
    transition: color 150ms ease;
  }

  .pill[data-variant="primary"] {
    background: oklch(from var(--color-accent-blue) l c h / 0.1);
    color: var(--color-accent-blue);
    border-color: oklch(from var(--color-accent-blue) l c h / 0.3);
  }

  .pill[data-variant="secondary"] {
    background: oklch(from var(--color-accent-purple) l c h / 0.1);
    /* Lightened from L=0.60 → L=0.82 to achieve ≥4.5:1 contrast on dark card backgrounds */
    color: oklch(0.82 0.15 290);
    border-color: oklch(from var(--color-accent-purple) l c h / 0.3);
  }

  .pill[data-variant="accent"] {
    background: oklch(from var(--color-accent-cyan) l c h / 0.1);
    color: var(--color-accent-cyan);
    border-color: oklch(from var(--color-accent-cyan) l c h / 0.3);
  }
</style>
