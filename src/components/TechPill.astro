---
interface Props {
  label: string;
  variant?: 'primary' | 'secondary' | 'accent';
}

const { label, variant = 'primary' } = Astro.props;

const variantClasses = {
  primary: 'bg-accent-blue/10 text-accent-blue border-accent-blue/30',
  secondary: 'bg-accent-purple/10 text-accent-purple border-accent-purple/30',
  accent: 'bg-accent-cyan/10 text-accent-cyan border-accent-cyan/30',
};
---

<span class={`inline-block px-3 py-1 rounded-full text-sm font-medium border transition-colors ${variantClasses[variant]}`}>
  {label}
</span>
